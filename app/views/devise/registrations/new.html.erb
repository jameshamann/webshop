<h2>Sign up</h2>

<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, placeholder: "Joe", class: "validate" %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, placeholder: "Bloggs", class: "validate" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: "joebloggs@example.com", class: "validate"%>
    </div>


    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "A Secure Password", class: "validate" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "A Secure Password", class: "validate" %>
    </div>

    <div class="waves-effect waves-light btn">
      <%= f.submit "Sign Up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
